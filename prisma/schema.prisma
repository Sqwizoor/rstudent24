generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
  output = "node_modules/@prisma/client"
}

datasource db {
  provider   = "postgresql"
  // Connection URL moved to `prisma.config.cjs` for Prisma v7+ compatibility
}


enum Highlight {
  HighSpeedInternetAccess
  WasherDryer
  AirConditioning
  Heating
  SmokeFree
  CableReady
  SatelliteTV
  DoubleVanities
  TubShower
  Intercom
  SprinklerSystem
  RecentlyRenovated
  CloseToTransit
  GreatView
  QuietNeighborhood
  BedroomCleaning
  BackupWater
  BackupElectricity
  Refrigerator
  SwimmingPool
  SleepoversAllowed
}

enum Amenity {
  WasherDryer
  AirConditioning
  Dishwasher
  HighSpeedInternet
  HardwoodFloors
  WalkInClosets
  Microwave
  Refrigerator
  Pool
  Gym
  Parking
  PetsAllowed
  WiFi
  OnSiteSecurity
  TransportToCampus
  OutdoorChillArea
  SecurityCameras
  Cafe
  LaundryFacilities
  GamesRoom
  TVRoom
  ComputerRoom
  StudyLabs
  Heater
  Fan
  Stove
  Oven
  BiometricAccess
}

enum PropertyType {
  Rooms
  Tinyhouse
  Apartment
  Villa
  Townhouse
  Cottage
}

enum University {
  UCT
  WITS  
  UJ
  UKZN
  UWC
  UP
  SU
  CPUT
  TUT
  UNISA
  NWU
  UFS
  UFH
  RU
  WSU
  UL
  UZ
  CUT
  MUT
  SPU
}

enum ApplicationStatus {
  Pending
  Denied
  Approved
}

enum PaymentStatus {
  Pending
  Paid
  PartiallyPaid
  Overdue
}

enum RoomType {
  PRIVATE
  SHARED
  ENTIRE_UNIT
}

enum RedirectType {
  NONE
  WHATSAPP
  CUSTOM_LINK
  BOTH
}

model Property {
  id                Int          @id @default(autoincrement())
  name              String
  description       String
  pricePerMonth     Float
  securityDeposit   Float
  photoUrls         String[]
  amenities         Amenity[]
  highlights        Highlight[]
  closestUniversities University[]
  accreditedBy      University[]
  closestUniversity University?
  closestCampuses   String[]     @default([])
  isPetsAllowed     Boolean      @default(false)
  isParkingIncluded Boolean      @default(false)
  isNsfassAccredited Boolean     @default(false)
  beds              Int
  baths             Float
  kitchens          Int          @default(0)
  squareFeet        Int
  propertyType      PropertyType
  postedDate        DateTime     @default(now())
  averageRating     Float?       @default(0)
  numberOfReviews   Int?         @default(0)
  locationId        Int
  managerCognitoId  String
  
  // Redirect settings for applications (property-level defaults)
  redirectType      RedirectType? @default(NONE)
  whatsappNumber    String?
  customLink        String?

  // Relations
  location     Location      @relation(fields: [locationId], references: [id])
  manager      Manager       @relation(fields: [managerCognitoId], references: [cognitoId])
  leases       Lease[]
  applications Application[]
  favoritedBy  Tenant[]      @relation("TenantFavorites")
  tenants      Tenant[]      @relation("TenantProperties")
  rooms        Room[]        @relation("PropertyRooms")
  reviews      Review[]
}

model Room {
  id                Int          @id @default(autoincrement())
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  name              String
  description       String?      @db.Text
  pricePerMonth     Float
  securityDeposit   Float        @default(0)
  topUp             Float        @default(0)
  squareFeet        Int?
  beds              Int          @default(1)
  baths             Float        @default(1)
  photoUrls         String[]     @default([])
  amenities         String[]     @default([])
  isAvailable       Boolean      @default(true)
  availableFrom     DateTime?
  roomType          RoomType     @default(PRIVATE)
  capacity          Int          @default(1)
  features          String[]     @default([])

  // Relations
  property          Property     @relation("PropertyRooms", fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId        Int
  applications      Application[]

  @@index([propertyId])
}

enum ManagerStatus {
  Pending
  Active
  Disabled
  Banned
}

model Manager {
  id          Int           @id @default(autoincrement())
  cognitoId   String        @unique
  name        String
  email       String
  phoneNumber String
  status      ManagerStatus @default(Pending)
  approvedAt  DateTime?
  updatedAt   DateTime      @updatedAt
  createdAt   DateTime      @default(now())

  managedProperties Property[]
}

model Admin {
  id          Int      @id @default(autoincrement())
  cognitoId   String   @unique
  name        String
  email       String
  phoneNumber String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tenant {
  id          Int      @id @default(autoincrement())
  cognitoId   String   @unique
  name        String
  email       String
  phoneNumber String
  referredBy  String?  // Referral code used during signup

  properties        Property[]    @relation("TenantProperties")
  favorites         Property[]    @relation("TenantFavorites")
  applications      Application[]
  leases            Lease[]
  reviews           Review[]
  referralsMade     Referral[]    @relation("ReferrerRelation")
  referralsReceived Referral[]    @relation("ReferredRelation")
  vouchers          Voucher[]
}

model Location {
  id          Int                                   @id @default(autoincrement())
  address     String
  city        String
  suburb      String?
  state       String
  country     String
  postalCode  String
  coordinates Unsupported("geography(Point, 4326)")

  properties Property[]
}

model Application {
  id              Int               @id @default(autoincrement())
  applicationDate DateTime
  status          ApplicationStatus
  propertyId      Int
  roomId          Int?
  tenantCognitoId String?
  name            String
  email           String
  phoneNumber     String
  message         String?
  leaseId         Int?              @unique

  property    Property     @relation(fields: [propertyId], references: [id])
  room        Room?        @relation(fields: [roomId], references: [id])
  tenant      Tenant?      @relation(fields: [tenantCognitoId], references: [cognitoId])
  lease       Lease?       @relation(fields: [leaseId], references: [id])
}

model Lease {
  id              Int      @id @default(autoincrement())
  startDate       DateTime
  endDate         DateTime
  rent            Float
  deposit         Float
  propertyId      Int
  tenantCognitoId String

  property    Property     @relation(fields: [propertyId], references: [id])
  tenant      Tenant       @relation(fields: [tenantCognitoId], references: [cognitoId])
  application Application?
  payments    Payment[]
}

model Payment {
  id            Int           @id @default(autoincrement())
  amountDue     Float
  amountPaid    Float
  dueDate       DateTime
  paymentDate   DateTime
  paymentStatus PaymentStatus
  leaseId       Int

  lease Lease @relation(fields: [leaseId], references: [id])
}

model Review {
  id              Int      @id @default(autoincrement())
  rating          Int      // 1-5 stars
  comment         String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  propertyId      Int
  tenantCognitoId String
  tenantName      String?  // Store tenant name for display

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  tenant   Tenant   @relation(fields: [tenantCognitoId], references: [cognitoId], onDelete: Cascade)

  // Prevent duplicate reviews per tenant per property
  @@unique([propertyId, tenantCognitoId])
  @@index([propertyId])
  @@index([tenantCognitoId])
}

enum VoucherStatus {
  Active
  Used
  Expired
}

model Referral {
  id                  Int      @id @default(autoincrement())
  referralCode        String   @unique
  referrerCognitoId   String   // The person who refers others
  referredCognitoId   String?  // The person who was referred (null if not signed up yet)
  referredEmail       String?  // Email of the referred person (for tracking before signup)
  createdAt           DateTime @default(now())
  completedAt         DateTime? // When the referred person completed a qualifying action
  isCompleted         Boolean  @default(false)
  voucherGenerated    Boolean  @default(false)
  
  // Relations
  referrer  Tenant   @relation("ReferrerRelation", fields: [referrerCognitoId], references: [cognitoId], onDelete: Cascade)
  referred  Tenant?  @relation("ReferredRelation", fields: [referredCognitoId], references: [cognitoId], onDelete: Cascade)
  vouchers  Voucher[]

  @@index([referralCode])
  @@index([referrerCognitoId])
  @@index([referredCognitoId])
}

model Voucher {
  id              Int           @id @default(autoincrement())
  code            String        @unique
  ownerCognitoId  String
  discountAmount  Float         // Discount in currency
  discountPercent Float?        // Optional percentage discount
  status          VoucherStatus @default(Active)
  expiresAt       DateTime
  usedAt          DateTime?
  createdAt       DateTime      @default(now())
  referralId      Int?          // Link to the referral that generated this voucher
  
  // Relations
  owner     Tenant    @relation(fields: [ownerCognitoId], references: [cognitoId], onDelete: Cascade)
  referral  Referral? @relation(fields: [referralId], references: [id])

  @@index([code])
  @@index([ownerCognitoId])
  @@index([status])
}
